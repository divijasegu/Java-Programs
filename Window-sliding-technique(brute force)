public class Main
{

output:45
	public static void main(String[] args) {
		int arr[] = {1,8,30,-5,20,7};
		int n =arr.length;
		int k =3;
	    
		
		int max =Integer.MIN_VALUE;
		int l = n-1-k;
		for(int i=0;i<l+1;i++){
		    int sum=0;
		    for(int j=0;j<=k-1;j++){
		        sum+=arr[i+j];
		    }
		    if(sum>max){
		        max = sum;
		    }
		    
		}
		System.out.println(max);
		
		
	}
}

output:45
